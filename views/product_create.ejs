            <form class="form_admin" action="/products/create" method="POST" enctype="multipart/form-data" class="formProduct" >
              <div class="banner">
                <h1>Crear producto</h1>
              </div>

              <div class="item">
                <!-- <p>Productos</p> -->
                <div class="multiple-items">
                  <div>
                    <p>Product ID</p>
                    <input type="number" name="productId" placeholder="0000000" disabled>
                  </div>
                  <div>
                    <p>Nombre</p>
                    <input type="text" id ="productName" name="name" placeholder="Nombre"><br>
                  </div>
                  <div class="item">
                    <p>Precio</p>
                    <input type="number" name="precio" placeholder="$ 0.00">
                  </div>
                  <div class="item">
                    <p>Cantidad</p>
                    <input type="number" name="cantidad" placeholder="0" min="0" max="10" id="quantity">
                  </div>                   
                </div>
                <div class="item">
                  <p>Descripción</p>
                  <textarea name="descripcion"rows="3" placeholder="Incluya la descripción general del producto" id="descripcion"></textarea>
                </div>          
                <div class="item">
                  <p>Imagen asociada</p>
                  <!-- <input type="email" name="email"/> -->
                  <!-- <input type="file" id="img" name="img" accept="image/*"> -->
                  <input type="file" name="img" accept="image/*" id="img">
                </div>                
                <div class="item">
                  <p>Categoría</p>
                  <select name="categoria" id="" required>
                    <option value="" disabled selected>- Seleccione la categoría - </option>
                    <% allProdCats.forEach(cat => { %>
                    <option value="<%= cat.id_prod_category %>"><%= cat.description %></option>
                    <% }); %>
                </select>
                </div>
                <div class="item">
                  <p>Medidas</p>
                  <div class="dimensions"> 
                    <select name="medidas" required>
                      <option value="cm">Centimetros</option>
                      <option value="inch">Pugadas</option>
                      <option value="metro">Metro</option>
                    </select>                            
                    <input type="number" name="alto" placeholder="Alto" id="alto">
                    <input type="number" name="ancho" placeholder="Ancho" id="ancho">
                    <input type="number" name="profundidad" placeholder="Profundidad" id="profundidad">
                  </div>
                </div>
                <div class="item">
                  <p>Color principal</p>
                  <select name="color" id="" required>
                    <option value="" disabled selected>- Seleccione el color - </option>
                    <% allColors.forEach(color => { %>
                    <option value="<%= color.id_color %>"><%= color.name %></option>
                    <% }); %>
